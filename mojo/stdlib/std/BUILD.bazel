load("//bazel:api.bzl", "mojo_library", "pkg_files")

# gazelle:default_visibility //visibility:public

package(default_visibility = ["//visibility:public"])

exports_files(["__init__.mojo"])

filegroup(
    name = "std_srcs",
    srcs = glob(["**/*.mojo"]),
)

mojo_library(
    name = "std",
    srcs = [
        ":std_srcs",
    ],
    validate_missing_docs = True,
)

pkg_files(
    name = "docs",
    srcs = [":std.docs"],
    renames = {
        "std.docs": "std",
    },
)
