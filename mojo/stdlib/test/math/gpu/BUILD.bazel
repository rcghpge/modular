load("//bazel:api.bzl", "lit_tests", "mojo_test")

package(default_visibility = ["//visibility:private"])

_LIT_TESTS = [
    "test_sin_cos_f64.mojo",
]

[
    mojo_test(
        name = src + ".test",
        size = "large",
        srcs = [src],
        tags = ["gpu"],
        target_compatible_with = ["//:has_gpu"] + select({
            "@platforms//os:macos": ["@platforms//:incompatible"],  # FIXME MOCO-2509
            "//conditions:default": [],
        }),
        deps = [
            "@mojo//:std",
            "@mojo//:test_utils",
        ],
    )
    for src in glob(
        ["*.mojo"],
        exclude = _LIT_TESTS,
    )
]

filegroup(
    name = "test-sources",
    srcs = glob(["**/*.mojo"]),
    visibility = ["//utils/debugging/gpu-build-benchmarking:__subpackages__"],
)

lit_tests(
    name = "lit_tests",
    srcs = _LIT_TESTS,
    mojo_deps = [
        "@mojo//:std",
    ],
    target_compatible_with = select({
        "//:asan": ["@platforms//:incompatible"],
        "//:tsan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
)
