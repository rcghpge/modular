load("//bazel:api.bzl", "mojo_test")

package(default_visibility = ["//visibility:private"])

_APPLE_GPU_INCOMPATIBLE = select({
    "//:apple_gpu": ["@platforms//:incompatible"],
    "//conditions:default": [],
})  # TODO(GEX-3156): Metal GPU execution crashes on Apple Silicon

_EXTRA_CONSTRAINTS = {
    "test_reduce_atomic.mojo": _APPLE_GPU_INCOMPATIBLE,  # FIXME: MOCO-2423
}

[
    mojo_test(
        name = src + ".test",
        size = "large",
        srcs = [src],
        tags = ["gpu"],
        target_compatible_with = ["//:has_gpu"] + _EXTRA_CONSTRAINTS.get(src, []),
        deps = [
            "@mojo//:std",
            "@mojo//:test_utils",
        ],
    )
    for src in glob(["*.mojo"])
]
