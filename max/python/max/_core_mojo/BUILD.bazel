load("//bazel:api.bzl", "modular_py_library", "requirement")

package(default_visibility = ["//max:consumers"])

modular_py_library(
    name = "_core_mojo",
    srcs = glob(["**/*.py"]),
    data = glob(["**/*.mojo"]) + [
        "@mojo//:std",
    ],
    tags = ["no-pydeps"],  # TODO: Fix and re-enable
    deps = [
        requirement("numpy"),
        "@mojo//:python",
    ],
)
