load("//bazel:api.bzl", "copy_files", "modular_py_library")

package(default_visibility = ["//max:consumers"])

copy_files(
    name = "ir_py",
    srcs = ["@llvm-project//mlir/python:IRPyFiles"],
    outs = ["ir.py"],
)

modular_py_library(
    name = "_mlir",
    srcs = [
        ":ir_py",
        "//max/python/max/_mlir/dialects",
    ],
    imports = ["../.."],
    tags = ["no-mypy"],  # Upstream files with violations
    deps = [
        "//max/python/max/_mlir/_mlir_libs:_mlir",
    ],
)
