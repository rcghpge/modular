load("//bazel:api.bzl", "mojo_library")

package(default_visibility = ["//max:consumers"])

mogg_lib_deps = [
    "//max:kv_cache",
    "//max:layout",
    "//max:linalg",
    "//max:nn",
    "//max:quantization",
    "//max:tensor",
    "//max:compiler_internal",
    "//max:shmem",
    "@mojo//:std",
]

mojo_library(
    name = "MOGGKernelAPI",
    srcs = glob(["**/*.mojo"]),
    validate_missing_docs = False,
    deps = mogg_lib_deps + ["//max:MOGGPrimitives"],
)
