load("//bazel:api.bzl", "lit_tests")

package(default_visibility = ["//max:consumers"])

lit_tests(
    name = "test",
    srcs = glob(["**/*.mojo"]),
    data = select({
        "//:amd_gpu": [
            "@rocshmem//:mpirun",
            "@rocshmem//:prterun",
        ],
        "//conditions:default": [],
    }),
    env = select({
        "//:nvidia_gpu": {"MODULAR_SHMEM_LIB_DIR": "../+http_archive+nvshmem_prebuilt"},
        "//:amd_gpu": {
            "MODULAR_SHMEM_LIB_DIR": "../+http_archive+rocshmem/lib",
            "LD_LIBRARY_PATH": "../+http_archive+rocshmem/lib",
            "OPAL_PREFIX": "../+http_archive+rocshmem",
            "ROCSHMEM_MPIRUN": "../+http_archive+rocshmem/bin/mpirun",
        },
        "//conditions:default": {},
    }),
    exec_properties = {
        "test.resources:gpu-memory": "20",
    },
    gpu_constraints = [
        "//:has_4_gpus",
    ],
    mojo_deps = [
        "//max:layout",
        "//max:shmem",
        "@mojo//:std",
    ],
    tags = [
        "gpu",
    ],
)
