load("//bazel:api.bzl", "mojo_test")

[
    mojo_test(
        name = src + ".test",
        size = "large",
        srcs = [src],
        tags = ["gpu"],
        target_compatible_with = [
            "//:amd_gpu",
            "//:nvidia_gpu",
        ],  # FIXME: PRDT-506
        deps = [
            "@mojo//:stdlib",
        ],
    )
    for src in glob(["**/*.mojo"])
]

filegroup(
    name = "test-sources",
    srcs = glob(["**/*.mojo"]),
    visibility = ["//utils/debugging/gpu-build-benchmarking:__subpackages__"],
)
