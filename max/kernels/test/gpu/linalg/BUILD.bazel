    mojo_test(
        name = src + ".test",
        size = "large",
        srcs = [src],
        enable_assertions = not src in [
            "test_warp_specialization_gemm.mojo",
            "test_generated_sm90_matmul_ptx.mojo",
        ],  # TODO: Fix assertions exception
