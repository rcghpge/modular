# Llama3 legacy tests.

load(
    "//bazel:api.bzl",
    "modular_py_test",
    "requirement",
)

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "tests_gpu",
    size = "enormous",
    srcs = glob(
        ["test_*_gpu.py"],
        exclude = ["test_*_multi_gpu.py"],
    ) + [
        "conftest.py",
    ],
    exec_properties = {
        "test.resources:gpu-memory": "20",
    },
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    tags = [
        "gpu",
    ],
    deps = [
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/python/max/pipelines/architectures",
        "//max/python/max/pipelines/lib",
        "//max/tests/integration/test_common:context_utils",
        "//max/tests/integration/test_common:mocks",
        requirement("torch"),
        requirement("numpy"),
        requirement("transformers"),
    ],
)

modular_py_test(
    name = "tests_multi_gpu",
    size = "enormous",
    srcs = glob(["test_*_multi_gpu.py"]) + ["conftest.py"],
    exec_properties = {
        "test.resources:gpu-memory": "20",
    },
    gpu_constraints = ["//:has_multi_gpu"],
    tags = [
        "gpu",
    ],
    deps = [
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/python/max/pipelines/architectures",
        "//max/python/max/pipelines/lib",
        "//max/tests/integration/test_common:context_utils",
        "//max/tests/integration/test_common:mocks",
        requirement("torch"),
        requirement("numpy"),
        requirement("transformers"),
    ],
)
