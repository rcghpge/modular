# DeepseekV2 tests.

load(
    "//bazel:api.bzl",
    "modular_py_library",
    "modular_py_test",
    "requirement",
)

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_library(
    name = "torch_reference",
    testonly = True,
    srcs = [
        "torch_reference/configuration_deepseek.py",
        "torch_reference/modeling_deepseek.py",
    ],
    ignore_unresolved_imports = [
        # `transformers` code, checks if flash_attn is installed
        "flash_attn",
    ],
    imports = ["."],
    tags = [
        "no-mypy",
    ],
    deps = [
        requirement("numpy"),
        requirement("torch"),
        requirement("transformers"),
    ],
)

modular_py_test(
    name = "deepseekV2",
    size = "large",
    srcs = glob(
        ["**/test_*.py"],
        exclude = [
            "*_distributed.py",
        ],
    ) + ["conftest.py"],
    data = [
        "//max/tests/integration/architectures/deepseekV2/testdata",
    ],
    env = {
        "PIPELINES_TESTDATA": "max/tests/integration/architectures/deepseekV2/testdata",
        "MODULAR_TORCH_MEMORY_PERCENT": "0.5",
    },
    exec_properties = {
        "test.resources:gpu-memory": "4",
    },
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],  # FIXME: MOCO-2411
        "//conditions:default": [],
    }),
    tags = [
        "gpu",
        "no-sandbox",
    ],
    deps = [
        ":torch_reference",
        "//max/python/max:_core",
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/python/max/pipelines/architectures",
        "//max/tests/integration/test_common:context_utils",
        requirement("numpy"),
        requirement("torch"),
    ],
)

modular_py_test(
    name = "deepseekV2_distributed_tests",
    size = "large",
    srcs = glob(["*_distributed.py"]) + ["conftest.py"],
    data = [
        "//max/tests/integration/architectures/deepseekV2/testdata",
    ],
    env = {
        "PIPELINES_TESTDATA": (
            "max/tests/integration/architectures/deepseekV2/testdata"
        ),
        "MODULAR_TORCH_MEMORY_PERCENT": "0.5",
    },
    exec_properties = {
        "test.resources:gpu-memory": "10",
    },
    gpu_constraints = ["//:has_4_gpus"],
    tags = [
        "gpu",
        "no-sandbox",
    ],
    deps = [
        ":torch_reference",
        "//max/python/max:_core",
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/python/max/pipelines/architectures",
        "//max/tests/integration/test_common:context_utils",
        requirement("numpy"),
        requirement("torch"),
    ],
)
