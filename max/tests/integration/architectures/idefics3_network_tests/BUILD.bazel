# Idefics3 integration tests.

load(
    "//bazel:api.bzl",
    "modular_py_test",
    "requirement",
)

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "test_tokenizer",
    size = "large",
    srcs = ["test_tokenizer.py"],
    env_inherit = ["HF_TOKEN"],
    ignore_extra_deps = [
        # Undeclared dep of transformers
        requirement("jinja2"),
    ],
    tags = [
        "gpu",
        "no-sandbox",
        "requires-network",
    ],
    deps = [
        "//max/python/max/interfaces",
        "//max/python/max/pipelines/architectures",
        "//max/tests/integration:hf_repo_lock",
        "//max/tests/integration/test_common:mocks",
        requirement("jinja2"),
        requirement("pytest-asyncio"),
        requirement("pillow"),
    ],
)
