        "//SDK/lib/API/python:max_engine",
        "//SDK/public/max-repo/pipelines/python/llama3",
        requirement("torch"),
        requirement("transformers"),
        requirement("hypothesis"),
        requirement("sentencepiece"),
        requirement("gguf"),
    ],
)

