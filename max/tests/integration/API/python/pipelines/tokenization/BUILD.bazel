load("//bazel:api.bzl", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//max/tests:__subpackages__",
])

modular_py_test(
    name = "tests",
    size = "large",
    srcs = [
        "conftest.py",
        "test_tokenizer.py",
        "test_tool_calling.py",
    ],
    data = [
        "//max/tests/integration/API:inputs",
        "//max/tests/integration/API:pytest_inputs",
        "//max/tests/tests/graph/testdata",
    ],
    env = {
        "GRAPH_TESTDATA": "max/tests/tests/graph/testdata",
        "MODULAR_PATH": ".",
        "MODULAR_TELEMETRY_ENABLED": "true",
    },
    env_inherit = ["HF_TOKEN"],
    exec_properties = {
        "test.resources:gpu-memory": "20",
    },
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    tags = [
        "gpu",
        "manual",
        "no-sandbox",
        "requires-network",
        "run-in-hf-workflow",  # TODO(AITLIB-293): Remove this once we have a way to run these tests on CI.
    ],
    deps = [
        "//max/python/max",
        "//max/tests/integration/pipelines/python:hf_repo_lock",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("pytest-asyncio"),
    ],
)
