# Idefics3 integration tests that require network access.
# These tests are tagged with AITLIB-293 and manual because they make HuggingFace API calls.

load(
    "//bazel:api.bzl",
    "modular_py_test",
    "requirement",
)

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "test_tokenizer",
    size = "large",
    srcs = ["test_tokenizer.py"],
    env_inherit = ["HF_TOKEN"],
    ignore_extra_deps = [
        # Undeclared dep of transformers
        requirement("jinja2"),
    ],
    tags = [
        "gpu",
        "manual",  # TODO(AITLIB-293): Remove this once we have a way to run these tests on CI.
        "no-sandbox",
        "requires-network",
        "run-in-hf-workflow",
    ],
    deps = [
        "//max/python/max/interfaces",
        "//max/python/max/pipelines/architectures",
        "//max/python/max/pipelines/lib",
        "//max/tests/integration/pipelines/python/test_common:mocks",
        requirement("jinja2"),
        requirement("pytest-asyncio"),
        requirement("pillow"),
    ],
)
