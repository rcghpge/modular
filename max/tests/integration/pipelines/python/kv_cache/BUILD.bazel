load("//bazel:api.bzl", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//max/tests:__subpackages__",
])

modular_py_test(
    name = "kvcache_tests",
    srcs = glob(
        ["*.py"],
        exclude = [
            "*_gpu.py",
            "test_rotary_embedding.py",
        ],
    ),
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    deps = [
        "//max/python/max/engine",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/tests/integration/API/python/graph:modular_graph_test",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("hypothesis"),
        requirement("numpy"),
        requirement("pytest-asyncio"),
        requirement("torch"),
    ],
)

modular_py_test(
    name = "embedding",
    srcs = glob(
        ["*_rotary_embedding.py"],
    ) + ["conftest.py"],
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
        "//:asan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    deps = [
        "//max/python/max/engine",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/tests/integration/API/python/graph:modular_graph_test",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("hypothesis"),
        requirement("numpy"),
        requirement("pytest-asyncio"),
        requirement("torch"),
    ],
)

modular_py_test(
    name = "kvcache_gpu_tests",
    srcs = glob(
        ["*_gpu.py"],
        exclude = ["*_distributed_gpu.py"],
    ) + ["conftest.py"],
    exec_properties = {
        "test.resources:gpu-memory": "1.2",
    },
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    tags = ["gpu"],
    deps = [
        "//max/python/max/engine",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/tests/integration/API/python/graph:modular_graph_test",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("hypothesis"),
        requirement("numpy"),
        requirement("pytest-asyncio"),
        requirement("torch"),
    ],
)

modular_py_test(
    name = "kvcache_distributed_gpu_tests",
    srcs = glob(["*_distributed_gpu.py"]) + ["conftest.py"],
    gpu_constraints = ["//:has_4_gpus"],
    tags = ["gpu"],
    deps = [
        "//max/python/max/engine",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/tests/integration/API/python/graph:modular_graph_test",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("hypothesis"),
        requirement("numpy"),
        requirement("pytest-asyncio"),
        requirement("torch"),
    ],
)
