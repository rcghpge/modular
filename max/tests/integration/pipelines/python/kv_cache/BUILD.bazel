load("//bazel:api.bzl", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "kvcache_tests",
    timeout = "long",
    srcs = glob(
        ["*.py"],
        exclude = [
            "*_gpu.py",
            "test_rotary_embedding.py",
        ],
    ),
    tags = ["no-pydeps"],  # TODO: Fix and re-enable
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    deps = [
        "//max/python/max/engine",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/python/max/support",
        "//max/tests/integration/API/python/graph:modular_graph_test",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("hypothesis"),
        requirement("numpy"),
        requirement("pytest-asyncio"),
        requirement("torch"),
    ],
)

modular_py_test(
    name = "embedding",
    srcs = glob(
        ["*_rotary_embedding.py"],
    ) + ["conftest.py"],
    args = [
        "-n",
        "auto",
    ],
    tags = ["no-pydeps"],  # TODO: Fix and re-enable
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
        "//:asan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    deps = [
        "//max/python/max/engine",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/tests/integration/API/python/graph:modular_graph_test",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("hypothesis"),
        requirement("numpy"),
        requirement("pytest-asyncio"),
        requirement("pytest-xdist"),
        requirement("torch"),
    ],
)

modular_py_test(
    name = "kvcache_gpu_tests",
