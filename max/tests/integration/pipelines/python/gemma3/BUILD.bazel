# gemma3 tests.

load(
    "//bazel:api.bzl",
    "modular_py_test",
    "requirement",
)

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "gemma3",
    size = "large",
    srcs = glob(["**/test_*.py"]) + ["conftest.py"],
    data = [
        "//max/tests/integration/pipelines/python/gemma3/testdata",
    ],
    env = {
        "PIPELINES_TESTDATA": "max/tests/integration/pipelines/python/gemma3/testdata",
        "MODULAR_TORCH_MEMORY_PERCENT": "0.6",
    },
    exec_properties = {
        "test.resources:gpu-memory": "4",
    },
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    tags = [
        "gpu",
        "no-sandbox",
    ],
    deps = [
        "//max/python/max:_core",
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/python/max/pipelines/architectures",
        "//max/tests/integration/pipelines/python/test_common:context_utils",
        requirement("numpy"),
        requirement("torch"),
        requirement("transformers"),
    ],
)
