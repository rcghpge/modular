# Qwen2.5VL integration tests.

load(
    "//bazel:api.bzl",
    "modular_py_library",
    "modular_py_test",
    "requirement",
)

modular_py_test(
    name = "test_image_processor",
    srcs = ["test_image_processor.py"],
    tags = [
        "manual",
        "requires-network",
    ],
    deps = [
        "//max/python/max/pipelines/architectures",
        requirement("transformers"),
    ],
)

modular_py_test(
    name = "qwen2_5vl",
    size = "enormous",
    srcs = glob(
        [
            "tests/test_*.py",
            "utils/*.py",
        ],
    ) + ["tests/__init__.py"],
    data = [
        "configs/qwen2_5vl-3b.json",
    ],
    env = {
        "MODULAR_TORCH_MEMORY_PERCENT": "0.5",
    },
    exec_properties = {
        "test.resources:gpu-memory": "2",
    },
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    imports = ["."],
    tags = [
        "gpu",
        "manual",
        "requires-network",
    ],
    deps = [
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/entrypoints",
        "//max/python/max/graph",
        "//max/python/max/nn",
        "//max/python/max/pipelines/architectures",
        "//max/python/max/serve",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("numpy"),
        requirement("pillow"),
        requirement("pytest-asyncio"),
        requirement("pytest-mock"),
        requirement("requests"),
        requirement("timm"),
        requirement("torch"),
        requirement("torchvision"),
        requirement("transformers"),
        requirement("qwen-vl-utils"),
        requirement("opencv-python"),
    ],
)

modular_py_test(
    name = "test_vision_functions",
    srcs = ["test_vision_functions.py"],
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
