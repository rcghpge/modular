# DeepseekV2 tests.

load(
    "//bazel:api.bzl",
    "modular_py_library",
    "modular_py_test",
    "requirement",
)

modular_py_library(
    name = "torch_reference",
    testonly = True,
    srcs = [
        "torch_reference/configuration_deepseek.py",
        "torch_reference/modeling_deepseek.py",
    ],
    imports = [
        ".",
        "torch_reference",
    ],  # Ensure imports work as expected
    tags = ["no-mypy"],
    visibility = ["//visibility:public"],
    deps = [
        requirement("torch"),
        requirement("transformers"),
    ],
)

modular_py_test(
    name = "deepseekV2",
    size = "large",
    srcs = glob(
        ["**/test_*.py"],
        exclude = [
            "*_distributed.py",
        ],
    ) + ["conftest.py"],
    data = [
        "//SDK:max",
        "//max/tests/integration/pipelines/python/deepseekV2/testdata",
    ],
    env = {
        "PIPELINES_TESTDATA": "max/tests/integration/pipelines/python/deepseekV2/testdata",
        "MODULAR_TORCH_MEMORY_PERCENT": "0.5",
    },
    exec_properties = {
        "test.resources:gpu-memory": "4",
    },
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],  # FIXME: MOCO-2411
        "//:a10_gpu": ["@platforms//:incompatible"],  # FIXME: SDLC-2564
        "//conditions:default": [],
    }),
    tags = [
        "gpu",
        "no-sandbox",
    ],
    deps = [
        ":torch_reference",
        "//max/python/max/engine",
        "//max/python/max/entrypoints",
        "//max/python/max/nn",
        "//max/python/max/pipelines/architectures",
        "//max/python/max/serve",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("torch"),
        requirement("transformers"),
    ],
)

modular_py_test(
    name = "deepseekV2_distributed_tests",
    size = "large",
    srcs = glob(["*_distributed.py"]) + ["conftest.py"],
    data = [
        "//SDK:max",
        "//max/tests/integration/pipelines/python/deepseekV2/testdata",
    ],
    env = {
        "PIPELINES_TESTDATA": (
            "max/tests/integration/pipelines/python/deepseekV2/testdata"
        ),
        "MODULAR_TORCH_MEMORY_PERCENT": "0.5",
    },
    exec_properties = {
        "test.resources:gpu-memory": "10",
    },
    gpu_constraints = ["//:has_4_gpus"],
    tags = [
        "gpu",
        "no-sandbox",
    ],
    deps = [
        ":torch_reference",
        "//max/python/max/engine",
        "//max/python/max/entrypoints",
        "//max/python/max/nn",
        "//max/python/max/pipelines/architectures",
        "//max/python/max/serve",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("torch"),
        requirement("transformers"),
    ],
)
