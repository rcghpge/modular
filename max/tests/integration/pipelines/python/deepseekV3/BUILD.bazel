load("//bazel:api.bzl", "modular_py_test", "requirement")

modular_py_test(
    name = "deepseekV3",
    size = "large",
    srcs = glob(
        ["*.py"],
    ),
    exec_properties = {
        "test.resources:gpu-memory": "1",
    },
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    imports = ["."],
    tags = [
        "gpu",
    ],
    deps = [
        "//SDK/lib/API/python/max/engine",
        "//SDK/lib/API/python/max/graph",
        "//SDK/lib/API/python/max/pipelines/architectures",
        requirement("numpy"),
        requirement("transformers"),
    ],
)
