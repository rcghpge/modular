# InternVL integration tests that require network access.
# These tests are tagged with AITLIB-293 and manual because they make HuggingFace API calls.

load(
    "//bazel:api.bzl",
    "modular_py_test",
    "requirement",
)

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "tests",
    size = "large",
    srcs = glob(["test_*.py"]),
    env_inherit = ["HF_TOKEN"],
    gpu_constraints = ["//:has_gpu"],
    tags = [
        "gpu",
        "manual",  # TODO(AITLIB-293): Remove this once we have a way to run these tests on CI.
        "no-pydeps",  # TODO: Fix and re-enable
        "no-sandbox",
        "requires-network",
        "run-in-hf-workflow",
    ],
    deps = [
        "//max/python/max/engine",
        "//max/python/max/entrypoints",
        "//max/python/max/pipelines/architectures",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("pillow"),
        requirement("pytest-asyncio"),
        requirement("pytest-mock"),
    ],
)
