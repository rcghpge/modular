load("//bazel:api.bzl", "modular_py_test", "requirement")

[
    modular_py_test(
        name = src.split("/")[-1].split(".")[0],
        srcs = [src],
        exec_properties = {
            "test.resources:gpu-memory": "16",
        },
        gpu_constraints = [
            "//:has_gpu",
            "//:has_multi_gpu",
            "//:nvidia_gpu",
        ] + select({
            "//:a10_gpu": ["@platforms//:incompatible"] if src in [
                "test_send_recv_multi_process_gpu.py",
                "test_send_recv_multi_tensor_multi_process_gpu.py",
            ] else [],
            "//conditions:default": [],
        }) + (
            ["//:has_4_gpus"] if src in [
                "test_send_recv_multi_tensor_threaded_gpu.py",
                "test_send_recv_multi_tensor_multi_process_gpu.py",
            ] else []
        ),
        imports = ["."],
        tags = ["gpu"],
        deps = [
            "//SDK/lib/API/python/max:_core",
            "//SDK/lib/API/python/max/engine",
            "//SDK/lib/API/python/max/nn",
            requirement("numpy"),
            requirement("torch"),
        ],
    )
    for src in glob(["*.py"])
]
