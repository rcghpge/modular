load("//bazel:api.bzl", "NIXL_ENV_VAR", "NIXL_PLUGINS_DATA", "modular_py_test", "requirement")

[
    modular_py_test(
        name = src.split("/")[-1].split(".")[0],
        srcs = [src],
        data = NIXL_PLUGINS_DATA,
        env = NIXL_ENV_VAR,
        exec_properties = {
            "test.resources:gpu-memory": "16",
        },
        gpu_constraints = [
            "//:has_gpu",
            "//:has_multi_gpu",
            "//:nvidia_gpu",
        ] + select({
            "//:a10_gpu": ["@platforms//:incompatible"] if src == "test_send_recv_multi_process_gpu.py" else [],
            "//conditions:default": [],
        }),
        imports = ["."],
        tags = ["gpu"],
        deps = [
            "//SDK/lib/API/python/max:_core",
            "//SDK/lib/API/python/max/engine",
            "//SDK/lib/API/python/max/nn",
            requirement("numpy"),
            requirement("torch"),
        ],
    )
    for src in glob(["*.py"])
]
