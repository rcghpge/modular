load("//bazel:api.bzl", "modular_py_library", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//max/tests:__subpackages__",
    "//open-source/max/max/tests:__subpackages__",
])

modular_py_library(
    name = "shared_conv_impl",
    testonly = True,
    srcs = ["shared_conv_impl.py"],
    deps = [
        "//max/python/max/engine",
        "//max/python/max/nn",
        requirement("torch"),
        requirement("numpy"),
    ],
)

modular_py_library(
    name = "shared_mlp_impl",
    testonly = True,
    srcs = ["shared_mlp_impl.py"],
    deps = [
        "//max/python/max/engine",
        "//max/python/max/nn",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("torch"),
        requirement("numpy"),
        requirement("pytest-mock"),
        requirement("pytest-asyncio"),
    ],
)

modular_py_test(
    name = "nn_tests",
    size = "large",
    srcs = glob(
        ["*.py"],
        exclude = [
            "*_gpu.py",
            "shared_conv_impl.py",
            "shared_mlp_impl.py",
        ],
    ),
    args = [
        "-n",
        "auto",
    ],
    imports = ["."],
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],  # FIXME: MOCO-2411
        "//:asan": ["@platforms//:incompatible"],  # Too slow with ASAN
        "//conditions:default": [],
    }),
    deps = [
        ":shared_conv_impl",
        ":shared_mlp_impl",
        "//max/python/max/engine",
        "//max/python/max/nn",
        "//max/python/max/nn/hooks",
        "//max/python/max/pipelines",
        "//max/python/max/serve",
        "//max/tests/integration/API/python/graph:modular_graph_test",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("torch"),
        requirement("transformers"),
        requirement("hypothesis"),
        requirement("gguf"),
        requirement("pytest-mock"),
        requirement("pytest-asyncio"),
        requirement("pytest-xdist"),
    ],
)

modular_py_test(
    name = "nn_gpu_tests",
    srcs = glob(
        ["*_gpu.py"],
        exclude = [
            "*_distributed_gpu.py",
            "test_conv_transpose_gpu.py",
            "test_linear_fp8_amd_gpu.py",
            "test_lora_sgmv_kernels_gpu.py",
        ],
    ) + ["conftest.py"],
    exec_properties = {
        "test.resources:gpu-memory": "3",
    },
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    imports = ["."],
    tags = ["gpu"],
    deps = [
        ":shared_conv_impl",
        "//max/python/max/engine",
        "//max/python/max/nn",
        "//max/python/max/pipelines",
        "//max/python/max/serve",
        "//max/tests/integration/API/python/graph:modular_graph_test",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("torch"),
        requirement("transformers"),
        requirement("hypothesis"),
        requirement("gguf"),
        requirement("pytest-asyncio"),
    ],
)

modular_py_test(
    name = "nn_nvidia_gpu_tests",
    srcs = ["test_conv_transpose_gpu.py"],
