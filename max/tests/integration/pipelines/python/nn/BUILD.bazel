load("//bazel:api.bzl", "modular_py_library", "modular_py_test", "requirement")

modular_py_library(
    name = "shared_conv_impl",
    srcs = ["shared_conv_impl.py"],
    deps = [
        "//SDK/lib/API/python/max/engine",
        "//SDK/lib/API/python/max/nn",
        requirement("torch"),
        requirement("numpy"),
    ],
)

modular_py_test(
    name = "nn_tests",
    size = "large",
    srcs = glob(
        ["*.py"],
        exclude = ["*_gpu.py"],
    ),
    imports = ["."],
    deps = [
        ":shared_conv_impl",
        "//SDK/integration-test/API/python/graph:modular_graph_test",
        "//SDK/integration-test/pipelines/python/test_common",
        "//SDK/lib/API/python/max/engine",
        "//SDK/lib/API/python/max/nn",
        "//SDK/lib/API/python/max/nn/hooks",
        "//SDK/lib/API/python/max/pipelines",
        "//SDK/lib/API/python/max/serve",
        requirement("torch"),
        requirement("transformers"),
        requirement("hypothesis"),
        requirement("gguf"),
        requirement("pytest-mock"),
        requirement("pytest-asyncio"),
    ],
)

modular_py_test(
    name = "nn_gpu_tests",
    srcs = glob(
        ["*_gpu.py"],
        exclude = ["*_distributed_gpu.py"],
    ) + ["conftest.py"],
    gpu_constraints = ["//:has_gpu"],
    imports = ["."],
    tags = ["gpu"],
    deps = [
        ":shared_conv_impl",
        "//SDK/integration-test/API/python/graph:modular_graph_test",
        "//SDK/integration-test/pipelines/python/test_common",
        "//SDK/lib/API/python/max/engine",
        "//SDK/lib/API/python/max/nn",
        "//SDK/lib/API/python/max/pipelines",
        "//SDK/lib/API/python/max/serve",
        requirement("torch"),
        requirement("transformers"),
        requirement("hypothesis"),
        requirement("gguf"),
        requirement("pytest-asyncio"),
    ],
)

modular_py_test(
    name = "nn_distributed_gpu_tests",
    size = "enormous",
    srcs = glob(["*_distributed_gpu.py"]) + ["conftest.py"],
    gpu_constraints = ["//:has_4_gpus"],
    tags = ["gpu"],
    deps = [
        "//SDK/integration-test/API/python/graph:modular_graph_test",
        "//SDK/integration-test/pipelines/python/test_common",
        "//SDK/lib/API/python/max/engine",
        "//SDK/lib/API/python/max/nn",
        "//SDK/lib/API/python/max/pipelines",
        "//SDK/lib/API/python/max/serve",
        requirement("torch"),
        requirement("transformers"),
        requirement("hypothesis"),
        requirement("gguf"),
        requirement("pytest-asyncio"),
    ],
)
