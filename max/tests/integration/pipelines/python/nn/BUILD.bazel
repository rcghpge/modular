load("//bazel:api.bzl", "modular_py_library", "modular_py_test", "requirement")

modular_py_library(
    name = "shared_conv_impl",
    testonly = True,
    srcs = ["shared_conv_impl.py"],
    deps = [
        "//SDK/lib/API/python/max/engine",
        "//SDK/lib/API/python/max/nn",
        requirement("torch"),
        requirement("numpy"),
    ],
)

modular_py_test(
    name = "nn_tests",
    size = "large",
    srcs = glob(
        ["*.py"],
        exclude = [
            "*_gpu.py",
            "shared_conv_impl.py",
        ],
    ),
    imports = ["."],
    deps = [
        ":shared_conv_impl",
        "//SDK/integration-test/API/python/graph:modular_graph_test",
        "//SDK/integration-test/pipelines/python/test_common",
        "//SDK/lib/API/python/max/engine",
        "//SDK/lib/API/python/max/nn",
        "//SDK/lib/API/python/max/nn/hooks",
        "//SDK/lib/API/python/max/pipelines",
        "//SDK/lib/API/python/max/serve",
        requirement("torch"),
        requirement("transformers"),
        requirement("hypothesis"),
        requirement("gguf"),
        requirement("pytest-mock"),
        requirement("pytest-asyncio"),
    ],
)

modular_py_test(
    name = "nn_gpu_tests",
    srcs = glob(
        ["*_gpu.py"],
        exclude = [
            "*_distributed_gpu.py",
            "test_conv_transpose_gpu.py",
            "test_lora_gpu.py",  # Excluded to be handled separately later
        ],
    ) + ["conftest.py"],
    exec_properties = {
        "test.resources:gpu-memory": "3",
    },
    gpu_constraints = ["//:has_gpu"],
    imports = ["."],
    tags = ["gpu"],
    deps = [
        ":shared_conv_impl",
        "//SDK/integration-test/API/python/graph:modular_graph_test",
        "//SDK/integration-test/pipelines/python/test_common",
        "//SDK/lib/API/python/max/engine",
