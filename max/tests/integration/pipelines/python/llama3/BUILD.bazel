# Llama3 tests.

load(
    "//bazel:api.bzl",
    "modular_py_test",
    "requirement",
)

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "tests_gpu",
    size = "enormous",
    srcs = glob(
        ["test_*_gpu.py"],
    ) + [
        "conftest.py",
    ],
    data = [
        "//max/tests/integration/pipelines/python/llama3/testdata",
    ],
    env = {
        "MODULAR_PATH": ".",
        "PIPELINES_TESTDATA": (
            "max/tests/integration/pipelines/python/llama3/testdata"
        ),
    },
    exec_properties = {
        "test.resources:gpu-memory": "20",
    },
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    tags = [
        "gpu",
        "no-pydeps",  # TODO: Fix and re-enable
        "no-sandbox",
        "requires-network",
    ],
    deps = [
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/nn",
        "//max/python/max/pipelines/lib",
        "//max/tests/integration/pipelines/python:hf_repo_lock",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("hypothesis"),
        requirement("torch"),
        requirement("transformers"),
    ],
)
