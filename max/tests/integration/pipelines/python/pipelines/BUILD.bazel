# Test for pipeline unit tests.

load("//bazel:api.bzl", "modular_py_test", "requirement")

modular_py_test(
    name = "tests",
    size = "large",
    srcs = glob(
        ["**/*.py"],
        exclude = ["**/*_gpu.py"],
    ),
    tags = [
        "requires-network",  # This is needed for escaping HF sandbox.
    ],
    target_compatible_with = select({
        # TODO: Sanitizer libs aren't available when python loads nanobind shared libs
        "//:asan": ["@platforms//:incompatible"],
        "//:tsan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    deps = [
        "//SDK/integration-test/pipelines/python:hf_repo_lock",
        "//SDK/integration-test/pipelines/python/test_common",
        "//SDK/lib/API/python/max/interfaces",
        "//SDK/lib/API/python/max/pipelines",
        "//SDK/lib/API/python/max/pipelines/core",
        requirement("numpy"),
        requirement("pytest-asyncio"),
    ],
)

modular_py_test(
    name = "test_compute_log_probabilities_gpu",
    size = "medium",
    srcs = ["test_compute_log_probabilities.py"],
    args = [
        "-k",
        "gpu",
    ],
    gpu_constraints = ["//:has_gpu"],
    tags = ["gpu"],
    target_compatible_with = select({
        # TODO: Sanitizer libs aren't available when python loads nanobind shared libs
        "//:asan": ["@platforms//:incompatible"],
        "//:tsan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    deps = [
        "//SDK/integration-test/pipelines/python/test_common",
        "//SDK/lib/API/python/max/interfaces",
        "//SDK/lib/API/python/max/pipelines",
        "//SDK/lib/API/python/max/pipelines/core",
        requirement("numpy"),
    ],
)

modular_py_test(
    name = "tests_gpu",
    size = "large",
    srcs = glob(["**/*_gpu.py"]),
    exec_properties = {
        "test.resources:gpu-memory": "23",
    },
    gpu_constraints = ["//:has_gpu"],
    tags = [
        "AITLIB-293",
        "gpu",
        "manual",  # TODO(AITLIB-293)
        "no-sandbox",
        "requires-network",
    ],
    target_compatible_with = select({
        # TODO: Sanitizer libs aren't available when python loads nanobind shared libs
        "//:asan": ["@platforms//:incompatible"],
        "//:tsan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    deps = [
        "//SDK/integration-test/pipelines/python:hf_repo_lock",
        "//SDK/integration-test/pipelines/python/test_common",
        "//SDK/lib/API/python/max/interfaces",
        "//SDK/lib/API/python/max/pipelines/lib",
        requirement("numpy"),
        requirement("pytest-asyncio"),
    ],
)
