# Test for pipeline unit tests.

load("//bazel:api.bzl", "modular_py_test", "requirement")

modular_py_test(
    name = "tests",
    size = "large",
    srcs = glob(
        ["**/*.py"],
        exclude = ["**/*_gpu.py"],
    ),
    target_compatible_with = select({
        # TODO: Sanitizer libs aren't available when python loads nanobind shared libs
        "//:asan": ["@platforms//:incompatible"],
        "//:tsan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    deps = [
        "//SDK/integration-test/pipelines/python/test_common",
        "//SDK/lib/API/python/max/pipelines",
        "//SDK/lib/API/python/max/pipelines/core",
        requirement("numpy"),
    ],
)

modular_py_test(
    name = "tests_gpu",
    size = "large",
    srcs = glob(["**/*_gpu.py"]),
    exec_properties = {
        # Ensure the test has at least 24GB of GPU memory available.
        "resources:gpu-memory": "24",
    },
    gpu_constraints = ["//:has_gpu"],
    tags = [
        "gpu",
        "no-sandbox",
        "requires-network",
    ],
    target_compatible_with = select({
        # TODO: Sanitizer libs aren't available when python loads nanobind shared libs
        "//:asan": ["@platforms//:incompatible"],
        "//:tsan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    deps = [
        "//SDK/integration-test/pipelines/python:hf_repo_lock",
        "//SDK/integration-test/pipelines/python/test_common",
        "//SDK/lib/API/python/max/pipelines",
        requirement("transformers"),
        requirement("xgrammar"),
    ],
)
