# Pixtral tests.

load(
    "//bazel:api.bzl",
    "modular_py_test",
    "requirement",
)

modular_py_test(
    name = "pixtral",
    size = "large",
    srcs = glob(
        ["**/test_*.py"],
        exclude = [
            "**/*_gpu.py",
        ],
    ),
    data = [
        "//GenericML:MGPRT",
        "//KGEN:CompilerRT",
        "//ModularFramework/tools/mof",
        "@llvm-project//compiler-rt:orc_rt",
    ],
    requires_gpu = False,
    tags = [
        "huggingface",
        "no-remote-exec",
        "no-sandbox",
        "requires-network",
    ],
    target_compatible_with = select(
        {
            # TODO: Sanitizer libs aren't available when python loads pybind shared libs
            "//:asan": ["@platforms//:incompatible"],
            "//:tsan": ["@platforms//:incompatible"],
            "//conditions:default": [],
        },
    ),
    deps = [
        "//SDK/lib/API/python/max/engine",
        "//SDK/lib/API/python/max/serve",
        "//SDK/public/max-repo/pipelines/python/cli",
        "//SDK/public/max-repo/pipelines/python/nn",
        "//SDK/public/max-repo/pipelines/python/pixtral",
        "//Support/python:support",
        requirement("huggingface-hub"),
        requirement("hypothesis"),
        requirement("pytest-asyncio"),
        requirement("torch"),
        requirement("transformers"),
        requirement("pillow"),
    ],
)
