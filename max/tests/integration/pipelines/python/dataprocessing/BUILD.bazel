# Test for shared dataprocessing utilities.

load("//bazel:api.bzl", "modular_py_test", "requirement")

modular_py_test(
    name = "tests",
    size = "large",
    srcs = glob(
        [
            "**/*.py",
        ],
        exclude = ["**/*_gpu.py"],
    ),
    data = [
        "//GenericML:MGPRT",
        "//KGEN:CompilerRT",
        "@llvm-project//compiler-rt:orc_rt",
    ],
    target_compatible_with = select({
        # TODO: Sanitizer libs aren't available when python loads nanobind shared libs
        "//:asan": ["@platforms//:incompatible"],
        "//:tsan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    deps = [
        "//SDK/lib/API/python/max/pipelines/dataprocessing",
        requirement("hypothesis"),
        requirement("numpy"),
    ],
)
