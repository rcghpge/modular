# Test for pipeline unit tests.

load("//bazel:api.bzl", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "tests",
    size = "large",
    srcs = glob(
        ["**/*.py"],
        exclude = ["**/*_gpu.py"],
    ),
    tags = [
        "requires-network",  # This is needed for escaping HF sandbox.
    ],
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],  # FIXME: MOCO-2411
        "//conditions:default": [],
    }),
    deps = [
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/interfaces",
        "//max/python/max/nn",
        "//max/python/max/pipelines/core",
        "//max/python/max/pipelines/lib",
        "//max/python/max/support",
        "//max/tests/integration:hf_repo_lock",
        "//max/tests/integration/test_common:mocks",
        "//max/tests/integration/test_common:numerics",
        requirement("numpy"),
        requirement("transformers"),
    ],
)

modular_py_test(
    name = "test_compute_log_probabilities_gpu",
    size = "medium",
    srcs = ["test_compute_log_probabilities.py"],
    args = [
        "-k",
        "gpu",
    ],
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],  # FIXME: MOCO-2411
        "//conditions:default": [],
    }),
    tags = [
        "gpu",
    ],
    deps = [
        "//max/python/max/driver",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/interfaces",
        "//max/python/max/pipelines/lib",
        "//max/tests/integration/test_common:numerics",
        requirement("numpy"),
    ],
)

modular_py_test(
    name = "tests_gpu",
    size = "large",
    srcs = glob(["**/*_gpu.py"]),
    exec_properties = {
        "test.resources:gpu-memory": "23",
    },
    gpu_constraints = ["//:has_gpu"],
    tags = [
        "gpu",
        "manual",  # TODO(AITLIB-293)
        "no-pydeps",  # TODO: Fix and re-enable
        "no-sandbox",
        "requires-network",
        "run-in-hf-workflow",
    ],
    deps = [
        "//max/python/max/interfaces",
        "//max/python/max/pipelines/lib",
        "//max/tests/integration:hf_repo_lock",
        "//max/tests/integration/test_common",
        requirement("numpy"),
        requirement("pytest-asyncio"),
    ],
)
