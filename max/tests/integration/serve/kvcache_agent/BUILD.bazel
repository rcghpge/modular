load("//bazel:api.bzl", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "tests",
    srcs = glob(
        ["*.py"],
        exclude = ["test_dispatcher_v2.py"],
    ),
    deps = [
        "//max/python/max/serve/kvcache_agent",
        "//max/python/max/serve/kvcache_agent:kvcache_agent_proto_srcs",
        "//max/python/max/serve/queue",
        requirement("grpcio"),
    ],
