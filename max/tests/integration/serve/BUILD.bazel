load("//bazel:api.bzl", "modular_py_library", "modular_py_test", "requirement")

modular_py_library(
    name = "params",
    testonly = True,
    srcs = ["params.py"],
    deps = [
        "//SDK/lib/API/python/max/driver",
    ],
)

modular_py_test(
    name = "tests_cpu",
    size = "large",
    srcs = [
        "__init__.py",
        "conftest.py",
        "test_tiny_llama_serving_cpu.py",
    ],
    data = [
        "//KGEN:CompilerRT",
        "//SDK/integration-test/pipelines/python/llama3/testdata",
        "@llvm-project//compiler-rt:orc_rt",
        "@test_llama_golden",
    ],
    env = {
        "BAZEL": "true",
        "PIPELINES_TESTDATA": "SDK/integration-test/pipelines/python/llama3/testdata",
    },
    exec_compatible_with = ["//:large"],
    requires_gpu = False,
    tags = [
        "requires-network",
    ],
    deps = [
        ":params",
        "//SDK/integration-test/pipelines/python/llama3:evaluate_llama",
        "//SDK/lib/API/python/max/serve",
        "//SDK/lib/API/python/max/serve/schemas",
        "//SDK/public/max-repo/pipelines/python/llama3",
        requirement("async-asgi-testclient"),
        requirement("pytest-asyncio"),
        requirement("transformers"),
    ],
)

modular_py_test(
    name = "tests_gpu",
    size = "enormous",
    srcs = [
        "__init__.py",
        "conftest.py",
        "test_tiny_llama_serving_gpu.py",
    ],
    data = [
        "//KGEN:CompilerRT",
        "//Kernels/tools/gpu-query",
        "//SDK/integration-test/pipelines/python/llama3/testdata",
        "@llvm-project//compiler-rt:orc_rt",
        "@test_llama_golden",
    ],
    env = {
        "BAZEL": "true",
        "PIPELINES_TESTDATA": "SDK/integration-test/pipelines/python/llama3/testdata",
        "MODULAR_CUDA_QUERY_PATH": "$(location //Kernels/tools/gpu-query)",
    },
    requires_gpu = True,
    tags = [
        "gpu",
        "requires-network",
    ],
    deps = [
        ":params",
        "//SDK/integration-test/pipelines/python/llama3:evaluate_llama",
        "//SDK/lib/API/python/max/engine",
        "//SDK/lib/API/python/max/serve",
        "//SDK/public/max-repo/pipelines/python/llama3",
        requirement("pytest-asyncio"),
        requirement("async-asgi-testclient"),
    ],
)
