load("//bazel:api.bzl", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "kvcache_tests",
    timeout = "long",
    srcs = glob(
        ["*.py"],
        exclude = [
            "*_gpu.py",
            "test_rotary_embedding.py",
        ],
    ),
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    deps = [
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/interfaces",
        "//max/python/max/kv_cache",
        "//max/python/max/mlir",
        "//max/python/max/nn",
        "//max/python/max/pipelines",
        "//max/python/max/pipelines/core",
        "//max/python/max/support",
        "//max/tests/integration/graph:modular_graph_test",
        "//max/tests/integration/test_common:context_utils",
        requirement("hypothesis"),
        requirement("numpy"),
        requirement("pytest-asyncio"),
        requirement("torch"),
    ],
)

modular_py_test(
    name = "embedding",
    srcs = glob(
        ["*_rotary_embedding.py"],
    ) + ["conftest.py"],
    args = [
        "-n",
        "auto",
    ],
    ignore_extra_deps = [
        # Used for parallelizing tests
        requirement("pytest-xdist"),
    ],
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
        "//:asan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    deps = [
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/tests/integration/graph:modular_graph_test",
        "//max/tests/integration/test_common:context_utils",
        requirement("hypothesis"),
        requirement("numpy"),
        requirement("pytest-xdist"),
        requirement("torch"),
    ],
)

modular_py_test(
    name = "kvcache_gpu_tests",
    srcs = glob(
        ["*_gpu.py"],
        exclude = [
            "*_distributed_gpu.py",
            "test_lora_*.py",
        ],
    ) + ["conftest.py"],
    exec_properties = {
        "test.resources:gpu-memory": "1.2",
    },
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    tags = [
        "gpu",
    ],
    deps = [
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/kv_cache",
        "//max/python/max/nn",
        "//max/tests/integration/test_common:context_utils",
        requirement("hypothesis"),
        requirement("numpy"),
    ],
)

