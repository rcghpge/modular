load("//bazel:api.bzl", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "norm_tests",
    srcs = glob(
        ["*.py"],
        exclude = ["*_gpu.py"],
    ),
    imports = ["."],
    tags = ["skip-external-ci"],  # FIXME: SDLC-3032
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    deps = [
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/nn",
        "//max/tests/integration/test_common:distance_metrics",
        "//max/tests/integration/test_common:ndarray_from_tensor_type",
        requirement("numpy"),
        requirement("torch"),
        requirement("hypothesis"),
    ],
)

modular_py_test(
    name = "norm_gpu_tests",
    srcs = glob(
        ["*_gpu.py"],
    ) + [
        "conftest.py",
    ],
    exec_properties = {
        "test.resources:gpu-memory": "1.5",
    },
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    imports = ["."],
    tags = [
        "gpu",
    ],
    deps = [
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/nn",
        requirement("torch"),
        requirement("hypothesis"),
    ],
)
