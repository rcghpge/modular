load("//bazel:api.bzl", "modular_py_library", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_library(
    name = "hf_repo_lock",
    srcs = ["hf_repo_lock.py"],
    data = ["hf-repo-lock.tsv"],
    imports = ["."],
    visibility = [
        "//SDK:__subpackages__",
        "//max/tests:__subpackages__",
        "//oss/modular/max/tests:__subpackages__",
        "//utils:__subpackages__",
    ],
    deps = [
        "//max/python/max/pipelines",
        requirement("huggingface-hub"),
    ],
)

modular_py_test(
    name = "test_hf_repo_lock",
    size = "small",
    srcs = ["test_hf_repo_lock.py"],
    # TODO(MODELS-994): Investigate and enable on macOS
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    deps = [
        ":hf_repo_lock",
        "//max/tests/integration/test_common:mocks",
        "//max/tests/integration/test_common:pipeline_model_dummy",
        requirement("pytest-mock"),
    ],
)
