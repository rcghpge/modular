load("//bazel:api.bzl", "lit_tests", "mojo_library", "requirement")

filegroup(
    name = "inputs",
    srcs = glob(["Inputs/**"]),
    visibility = [":__subpackages__"],
)

mojo_library(
    name = "test_user_op",
    srcs = glob(["Inputs/test_user_op/*.mojo"]),
    visibility = [":__subpackages__"],
    deps = [
        "//SDK/lib/API/mojo/max/compiler",
        "//SDK/lib/API/mojo/max/tensor",
        "//open-source/mojo/stdlib/stdlib",
    ],
)

mojo_library(
    name = "counter_ops",
    srcs = glob(["Inputs/counter_ops/*.mojo"]),
    visibility = [":__subpackages__"],
    deps = [
        "//Kernels/mojo/buffer",
        "//Kernels/mojo/extensibility/compiler_internal",
        "//Kernels/mojo/register",
        "//SDK/lib/API/mojo/max/tensor",
        "//open-source/mojo/stdlib/stdlib",
    ],
)

mojo_library(
    name = "compile_config_ops",
    srcs = glob(["Inputs/compile_config_ops/*.mojo"]),
    visibility = [":__subpackages__"],
    deps = [
        "//Kernels/mojo/buffer",
        "//Kernels/mojo/logger",
        "//Kernels/mojo/register",
        "//SDK/lib/API/mojo/max/compiler",
        "//SDK/lib/API/mojo/max/max",
        "//SDK/lib/API/mojo/max/tensor",
        "//open-source/mojo/stdlib/stdlib",
    ],
)

lit_tests(
    name = "test",
    size = "large",
    srcs = glob(
        [
            "**/*.mlir",
            "**/*.yaml",
        ],
        exclude = [
            "max-cli/benchmark/Inputs/**",
            "Inputs/**",
        ],
    ),
    data = glob(["max-cli/benchmark/Inputs/**"]) + [
        ":inputs",
        "//GenericML:MGPRT",
        "//KGEN:CompilerRT",
        "//PyTorch:TorchRuntimePlugins",
        "//PyTorch/tools/torch:mtorch",
        "@llvm-project//compiler-rt:orc_rt",
    ],
    tags = [
        "no-sandbox",  # These tests use openmp which validates only 1 shared library is loaded at the same time, the libraries in the sandbox appear different so running them in parallel fails otherwise.
    ],
    target_compatible_with = select({
        "//:asan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    tools = [
        "//SDK/tools/max",
    ],
    deps = [
        requirement("torch"),
    ],
)
