load("//bazel:api.bzl", "modular_py_binary", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_binary(
    name = "smoke_test",
    testonly = True,
    srcs = ["smoke_test.py"],
    data = glob([
        "tasks/**",
    ]),
    imports = [".."],
    tags = ["no-pydeps"],  # TODO: Fix and re-enable
    deps = [
        requirement("click"),
        requirement("requests"),
        requirement("lm-eval"),
        "//max/python/max/entrypoints:pipelines",
        "//max/tests/integration:hf_repo_lock",
    ],
)

modular_py_binary(
    name = "smoke_test_github_matrix",
    srcs = ["smoke_test_github_matrix.py"],
    imports = [".."],
    deps = [
        requirement("click"),
    ],
)

modular_py_binary(
    name = "bisect_smoke_test",
    testonly = True,
    srcs = ["bisect_smoke_test.py"],
    imports = [".."],
)

modular_py_test(
    name = "test_smoke_test",
    size = "small",
    srcs = [
        "conftest.py",
        "test_smoke_test.py",
    ],
    imports = [".."],
    # TODO(MODELS-994): Investigate and enable on macOS
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    deps = [
        ":smoke_test",
    ],
)

modular_py_test(
    name = "test_bisect_smoke_test",
    size = "small",
    srcs = [
        "conftest.py",
        "test_bisect_smoke_test.py",
    ],
    imports = [".."],
    # TODO(MODELS-994): Investigate and enable on macOS
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    deps = [
        ":bisect_smoke_test",
        ":smoke_test",
    ],
)

modular_py_test(
    name = "test_smoke_test_github_matrix",
    size = "small",
    srcs = [
        "conftest.py",
        "test_smoke_test_github_matrix.py",
    ],
    imports = [".."],
    deps = [
        ":smoke_test_github_matrix",
        requirement("click"),
    ],
)
