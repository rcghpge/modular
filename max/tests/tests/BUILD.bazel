load("//bazel:api.bzl", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "max_tests",
    srcs = glob(
        ["*.py"],
        exclude = [
            "test_flashinfer_cubin.py",
            "test_interpreter.py",
            "test_interpreter_ops.py",
            "test_interpreter_ops_gpu.py",
        ],
    ),
    args = [
        "-n",
        "auto",
    ],
    ignore_extra_deps = [
        # Used for parallelizing tests
        requirement("pytest-xdist"),
    ],
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    deps = [
        "//max/python/max:_core",
        "//max/python/max:tensor",
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/mlir",
        requirement("pytest-xdist"),
        requirement("numpy"),
    ],
)

modular_py_test(
    name = "test_flashinfer_cubin",
    srcs = ["test_flashinfer_cubin.py"],
    tags = ["gpu"],
    target_compatible_with = ["//:nvidia_gpu"],
    deps = [
        requirement("flashinfer-cubin"),
    ],
)

modular_py_test(
    name = "test_interpreter",
    srcs = ["test_interpreter.py"],
    deps = [
        "//max/python/max:interpreter",
        "//max/python/max:tensor",
        "//max/python/max/_interpreter_ops",
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/graph",
        requirement("numpy"),
    ],
)

modular_py_test(
    name = "test_interpreter_ops",
    srcs = ["test_interpreter_ops.py"],
    ignore_extra_deps = [
        "//max/python/max:interpreter",
    ],
    deps = [
        "//max/python/max:interpreter",
        "//max/python/max:tensor",
        "//max/python/max/driver",
        "//max/python/max/dtype",
        requirement("numpy"),
    ],
)

modular_py_test(
    name = "test_interpreter_ops_gpu",
    srcs = ["test_interpreter_ops_gpu.py"],
    env = {
        "MODULAR_TORCH_MEMORY_PERCENT": "0.6",
    },
    ignore_extra_deps = [
        "//max/python/max/engine",
    ],
    tags = ["gpu"],
    target_compatible_with = ["//:nvidia_gpu"],
    deps = [
        "//max/python/max:interpreter",
        "//max/python/max:tensor",
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        requirement("torch"),
    ],
)
