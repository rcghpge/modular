load("//bazel:api.bzl", "modular_py_test", "requirement")

modular_py_test(
    name = "tests",
    srcs = glob(["*.py"]),
    target_compatible_with = select({
        "//:asan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    deps = [
        "//SDK/lib/API/python/max/engine",
        requirement("hypothesis"),
        requirement("numpy"),
        requirement("torch"),
    ],
)

modular_py_test(
    name = "gpu_tests",
    srcs = glob(["accelerator_tests/*.py"]),
    gpu_constraints = ["//:has_gpu"],
    tags = ["gpu"],
    target_compatible_with = select({
        "//:asan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    deps = [
        "//SDK/lib/API/python/max/engine",
        requirement("numpy"),
        requirement("torch"),
    ],
)
