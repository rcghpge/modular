load("//bazel:api.bzl", "modular_py_test", "requirement")

modular_py_test(
    name = "tests",
    srcs = glob(["*.py"]),
    deps = [
        "//SDK/lib/API/python/max/engine",
        "//SDK/lib/API/python/max/graph",
        requirement("hypothesis"),
        requirement("numpy"),
        requirement("torch"),
    ],
)

modular_py_test(
    name = "gpu_tests",
    srcs = glob(["accelerator_tests/*.py"]),
    gpu_constraints = ["//:has_gpu"],
    tags = ["gpu"],
    deps = [
        "//SDK/lib/API/python/max/engine",
        "//SDK/lib/API/python/max/graph",
        requirement("numpy"),
        requirement("torch"),
    ],
)
