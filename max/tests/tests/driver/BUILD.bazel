load("//bazel:api.bzl", "modular_py_test", "requirement")

modular_py_test(
    name = "tests",
    srcs = glob(["*.py"]),
    target_compatible_with = select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    deps = [
        "//max/python/max/engine",
        "//max/python/max/graph",
        requirement("hypothesis"),
        requirement("numpy"),
        requirement("torch"),
    ],
)

modular_py_test(
    name = "gpu_tests",
    srcs = [
        "accelerator_tests/test_device.py",
        "accelerator_tests/test_tensor.py",
    ],
    gpu_constraints = ["//:has_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    tags = ["gpu"],
    deps = [
        "//max/python/max/engine",
        "//max/python/max/graph",
        requirement("numpy"),
        requirement("torch"),
    ],
)

modular_py_test(
    name = "multi_gpu_tests",
    srcs = ["accelerator_tests/test_multi_device.py"],
    gpu_constraints = ["//:has_multi_gpu"] + select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    tags = ["gpu"],
    deps = [
        "//max/python/max/engine",
        "//max/python/max/graph",
        requirement("numpy"),
        requirement("torch"),
    ],
)
