load("//bazel:api.bzl", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "tests",
    timeout = "long",
    srcs = glob(["**/*.py"]),
    data = ["//max/tests/tests/torch/custom_ops"],
    env = {
        "MODULAR_PYTORCH_CUSTOM_OPS": "$(rootpath //max/tests/tests/torch/custom_ops)",
        "MODULAR_TORCH_MEMORY_PERCENT": "0.9",
        "TORCH_COMPILE_FORCE_DISABLE_CACHES": "True",
    },
    mojo_deps = [
        "//max:MOGGPrimitives",
        "//max:compiler_internal",
        "//max:tensor",
        "@mojo//:std",
    ],
    tags = [
        "gpu",
    ],
    target_compatible_with = select({
        "//:apple_gpu": ["@platforms//:incompatible"],  # FIXME: MOCO-2411
        "//conditions:default": [],
    }) + select({
        "//:asan": ["@platforms//:incompatible"],  # Too slow under ASAN
        "//conditions:default": [],
    }),
    deps = [
        "//max/python/max/driver",
        "//max/python/max/dtype",
        "//max/python/max/graph",
        "//max/python/max/mlir",
        "//max/python/max/torch",
        requirement("numpy"),
        requirement("torch"),
    ],
)
