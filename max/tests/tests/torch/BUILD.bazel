load("//bazel:api.bzl", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//max/tests:__subpackages__",
    "//open-source/max/max/tests:__subpackages__",
])

modular_py_test(
    name = "tests",
    srcs = glob(["**/*.py"]),
    args = [
        "-n",
        "auto",
    ],
    data = ["//max/tests/tests/torch/custom_ops"],
    env = {
        "MODULAR_PYTORCH_CUSTOM_OPS": "$(rootpath //max/tests/tests/torch/custom_ops)",
        "MODULAR_TORCH_MEMORY_PERCENT": "0.9",
        "TORCH_COMPILE_FORCE_DISABLE_CACHES": "True",
    },
    mojo_deps = [
        "//max:MOGGPrimitives",
        "//max:compiler_internal",
        "//max:tensor",
        "@mojo//:std",
    ],
    tags = [
        "gpu",
        "resources:memory:35000",  # 35 GB
    ],
    target_compatible_with = select({
        "//:apple_gpu": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    deps = [
        "//max/python/max/dtype",
        "//max/python/max/engine",
        "//max/python/max/graph",
        "//max/python/max/torch",
        requirement("hypothesis"),
        requirement("numpy"),
        requirement("pytest-xdist"),
        requirement("torch"),
    ],
)
