load("//bazel:api.bzl", "modular_py_test", "requirement")

package(default_visibility = [
    "//:__pkg__",
    "//SDK/integration-test:__subpackages__",
    "//max/tests:__subpackages__",
    "//oss/modular/max/tests:__subpackages__",
])

modular_py_test(
    name = "lib",
    srcs = glob(["test_*.py"]),
    imports = ["."],
    tags = ["no-pydeps"],  # TODO: Fix and re-enable Fix and re-enable
    target_compatible_with = select({
        "@platforms//os:macos": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),  # FIXME: MOCO-2411
    deps = [
        "//max/python/max",
        "//max/tests/integration/pipelines/python/test_common",
        requirement("pyyaml"),
        requirement("types-pyyaml"),
    ],
)
