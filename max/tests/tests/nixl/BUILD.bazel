load("//bazel:api.bzl", "modular_py_test", "requirement")

package(default_visibility = ["//max/tests:__subpackages__"])

modular_py_test(
    name = "tests",
    srcs = glob(["*_gpu.py"]),
    gpu_constraints = [
        "//:has_gpu",
        "//:nvidia_gpu",
    ],
    tags = [
        "gpu",
    ],
    deps = [
        "//max/python/max:_core",
        "//max/python/max/driver",
        requirement("numpy"),
        requirement("torch"),
    ],
)
